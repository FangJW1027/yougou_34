<!--pages/search_list/index.wxml-->
<!-- 搜索栏 -->
<view class="search">
  <view class="search-input">
    <icon type="search" size="16"></icon>
    小米
  </view>
</view>

<!-- tab栏 -->
<view class="tab">
  <view class="tab-item {{current === index ? 'active':''}}" wx:for="{{ ['综合', '销量', '价格'] }}" wx:key="{{index}}" bindtap="handleChange" data-index="{{index}}">
    {{item}}
  </view>
</view>

<!-- 商品列表 -->
<view class="good-list">
  <!-- 单个商品 -->
  <view>
    <navigator url="" class="goods-item">
      <image src="https://img.alicdn.com/bao/uploaded/i4/2200678545211/O1CN01kDVTL91oMgRaEjNfc_!!0-item_pic.jpg"></image>
      <view class="goods-right">
        <view class="goods-title">
          小米(MI)雨伞 全自动折叠太阳防晒遮阳伞米家男女通用商务家庭用创意超轻大号双人晴雨伞
        </view>
        <view class="goods-price">
          ¥
          <text>69.00</text>
        </view>
      </view>
    </navigator>
  </view>
</view>